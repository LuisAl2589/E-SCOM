    <!-- Template Main CSS File -->
    <link rel="stylesheet" href="~/css2/style.css" asp-append-version="true" />


    <!-- =======================================================
    * Template Name: NiceAdmin
    * Updated: Mar 09 2023 with Bootstrap v5.2.3
