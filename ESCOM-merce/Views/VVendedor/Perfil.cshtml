
@using ESCOM_merce.Models;


@{
    ViewData["Title"] = "Perfil";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var usuario = Model;
}
<br />
<br />
<br />
<div class="container">

    <div class="row">
        <div class="col col-md-4">
            <div class="card md-4">
                <div class="card-body text-center">
                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp" alt="avatar"
                         class="rounded-circle img-fluid" style="width: 150px;">
                    <h5 class="my-3">@usuario.Nombre</h5>
                    <p class="text-muted mb-1">@usuario.TipoUsuario</p>
                 
                    <div class="d-flex justify-content-center mb-2">
                        <form asp-controller="VVendedor" asp-action="Eliminar" method="post" onsubmit="return confirm('¿Estás seguro?')">
                            <input type="hidden" name="_idUsuario" value="@usuario.Id">

                            <button type="submit" class="btn btn-outline-danger">Eliminar Cuenta</button>
                        </form>
                        <form asp-controller="VVendedor" asp-action="VEditar" method="post">
                            <input type="hidden" name="_idUsuario" value="@usuario.Id">
                        <button type="submit" class="btn btn-primary ms-1">Editar</button>
                        </form>
                    </div>
               
                </div>
            </div>
        </div>
        <div class="col col-md-8">
            <div class="card md-8" style="width: 30rem; ">
                <div class="card-body">
                    <div class="row">
                        <div class="col col-md-3">
                            <p class="mb-0">Nombre</p>
                        </div>
                        <div class="col col-md-9">
                            <p class="text-muted mb-0">@usuario.Nombre</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col col-md-3">
                            <p class="mb-0">Primer Apellido</p>
                        </div>
                        <div class="col col-md-9">
                            <p class="text-muted mb-0">@usuario.PrimerApellido</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col col-md-3">
                            <p class="mb-0">Email</p>
                        </div>
                        <div class="col col-md-9">
                            <p class="text-muted mb-0">@usuario.Correo</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col col-md-3">
                            <p class="mb-0">Teléfono</p>
                        </div>
                        <div class="col col-md-9">
                            <p class="text-muted mb-0">@usuario.Telefono</p>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>
    <br /><br />
    <div class="row">
        <div class="col-md-4">

            <div class="card mb-4 mb-lg-0">
                <div class="card-body p-0">
                    <ul class="list-group list-group-flush rounded-3">
                        <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                            <i class="fas fa-globe fa-lg text-warning"></i>
                            <p class="mb-0">Red social1</p>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                            <i class="fab fa-github fa-lg" style="color: #333333;"></i>
                            <p class="mb-0">Red social2</p>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                            <i class="fab fa-twitter fa-lg" style="color: #55acee;"></i>
                            <p class="mb-0">Red social3</p>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                            <i class="fab fa-instagram fa-lg" style="color: #ac2bac;"></i>
                            <p class="mb-0">Red social4</p>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                            <i class="fab fa-facebook-f fa-lg" style="color: #3b5998;"></i>
                            <p class="mb-0">Red social5</p>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
        
        
