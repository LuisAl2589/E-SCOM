<body>

    <main>
        <div class="container">

            <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">

                            <div class="d-flex justify-content-center py-4">
                                <a href="index.html" class="logo d-flex align-items-center w-auto">
                                    <img src="assets/img/logo.png" alt="">
                                    <span class="d-none d-lg-block">E-SCOM</span>
                                </a>
                            </div><!-- End Logo -->

                            <div class="card mb-3" style="width: 30rem;">

                                <div class="card-body">

                                    <div class="pt-4 pb-2">
                                        <h5 class="card-title text-center pb-0 fs-4">Crea una Cuenta</h5>
                                        <p class="text-center small">Ingresa tus datos personales</p>
                                    </div>

                                    <form asp-controller="VUsuario" asp-action="Editar" method="post">
                                        <input type="hidden" asp-for="Id" value="@usuario.Id">

                                        <div class="col-12">
                                            <label for="yourName" class="form-label">Nombre</label>
                                            <input type="text" asp-for="Nombre" class="form-control" id="yourName" value="@usuario.Nombre" required>
                                            <div class="invalid-feedback">Please, enter your name!</div>
                                        </div>
                                        <br />

                                        <div class="col-12">
                                            <label for="yourName" class="form-label">Primer Apellido</label>
                                            <input type="text" asp-for="PrimerApellido" class="form-control" id="yourName" value="@usuario.PrimerApellido" required>
                                            <div class="invalid-feedback">Please, enter your name!</div>
                                        </div>
                                        <br />


                                        <div class="col-12">
                                            <label for="yourEmail" class="form-label">Correo</label>
                                            <input type="email" asp-for="Correo" class="form-control" id="yourEmail" value="@usuario.Correo" required>
                                            <div class="invalid-feedback">Please enter a valid Email adddress!</div>
                                        </div>
                                        <br />

                                        <div class="col-12">
                                            <label for="yourPassword" class="form-label">Telefono</label>
                                            <input type="text" asp-for="Telefono" class="form-control" id="yourPassword" value="@usuario.Telefono" required>
                                            <div class="invalid-feedback">Please enter your password!</div>
                                        </div>
                                        <br />

                                        <div class="col-12">
                                            <label for="yourUsername" class="form-label">Username</label>
                                            <div class="input-group has-validation">

                                                <input type="text" asp-for="Nickname" class="form-control" id="yourUsername" value="@usuario.Nickname" required>
                                                <div class="invalid-feedback">Please choose a username.</div>
                                            </div>
                                        </div>
                                        <br />


                                        <div class="col-12">
                                            <label for="yourPassword" class="form-label">Contraseña</label>
                                            <input type="text" asp-for="Password" class="form-control" id="yourPassword" value="@usuario.Password" required>
                                            <div class="invalid-feedback">Please enter your password!</div>
                                        </div>
                                        <br />

                                        <div class="col-12">
                                            <select class="form-select" asp-for="TipoUsuario" aria-label="Tipo de Usuario">
                                                <option value="Cliente" selected>Cliente</option>
                                                <option value="Vendedor">Vendedor</option>

                                            </select>
                                        </div>
                                        <br />
                                        <div class="col-12">
                                            <button class="btn btn-primary w-100" type="submit">Editar Cuenta</button>
                                        </div>
                                        <!--
                                        <div class="col-12">
                                          <p class="small mb-0">Already have an account? <a href="pages-login.html">Log in</a></p>
                                        </div>
                                        -->
                                    </form>

                                </div>
                            </div>


                        </div>
                    </div>
                </div>

            </section>

        </div>
    </main><!-- End #main -->

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>

    <!-- Template Main JS File -->

</body>

</html>
